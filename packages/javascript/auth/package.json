{
  "name": "@monorepo/auth",
  "version": "0.1.0",
  "description": "Reusable Ory-powered auth flows (login/registration/recovery) for monorepo apps.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./env": "./src/env.d.ts"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite dev --host",
    "example:build": "vite build",
    "build": "vite build --config vite.lib.config.ts && tsc -b tsconfig.build.json",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "preview": "vite preview --host",
    "test": "vitest"
  },
  "dependencies": {
    "@monorepo/design-system": "workspace:*",
    "axios": "^1.7.9"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^6.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "typescript": "^5.9.3",
    "@vitejs/plugin-react": "^5.1.0",
    "react-router-dom": "^6.28.0",
    "vite": "^7.1.12",
    "vitest": "^4.0.6"
  }
}

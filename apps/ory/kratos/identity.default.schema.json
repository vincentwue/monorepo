{
    "$id": "https://schemas.ory.sh/kratos/identity.default.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Default Identity Schema",
    "type": "object",
    "properties": {
        "traits": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "format": "email",
                    "title": "Email",
                    "ory.sh/kratos": {
                        "credentials": {
                            "password": {
                                "identifier": true
                            }
                        }
                    }
                }
            },
            "required": [
                "email"
            ]
        }
    }
}